<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<selection>
			<h1>
				<%= image_tag(@user.gravatar_url, alt: @user.name) %>
				<%= @user.name %>
			</h1>
		</selection>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>			
</div>			